{
    "name": "vertical-line-vscode",
    "displayName": "Vertical Line",
    "description": "Show vertical line of window size where cursor position.",
    "version": "0.0.0",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "vertical-line.show",
                "title": "Show Vertical Line"
            },
            {
                "command": "vertical-line.hide",
                "title": "Hide Vertical Line"
            }
        ],
        "configuration": [
            {
                "title": "Vertical Line",
                "properties": {
                    "vertical-line.enabled": {
                        "type": "boolean",
                        "default": true,
                        "description": "Enabled Vertical Line"
                    },
                    "vertical-line.color": {
                        "type": "string",
                        "default": "#888888",
                        "description": "Vertical Line Color"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.1.4",
        "vscode": "^1.1.25",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
